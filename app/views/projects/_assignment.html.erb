<div class="field">
  <%= f.label :owner %>
  <%= f.text_field :owner %>
  <%= f.check_box :_delete %>
  <%= f.label :_delete, "(remove)" %>
  <div class="children_fields">
    <% f.fields_for :steps do |step_form| %>
      <%= render :partial => 'step', :locals => { :f => step_form } %>
    <% end %>
    <p><%= add_child_link "New Step", f, :steps %></p>
  </div>
</div>
